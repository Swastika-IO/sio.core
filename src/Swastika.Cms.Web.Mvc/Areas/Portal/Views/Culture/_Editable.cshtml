@model BECultureViewModel

@{
    //ViewData["Title"] = "Create Culture";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        <div asp-validation-summary="All"></div>
    </div>
}
<input type="hidden" asp-for="Id" />
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                Main Content
            </div>
            <div class="card-body">

                <div class="form-horizontal">
                    <div class="form-group">
                        <label asp-for="Specificulture" class="control-label"></label>
                        <div>
                            <input asp-for="Specificulture" class="form-control" />
                            <span asp-validation-for="Specificulture" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Lcid" class="control-label"></label>
                        <div>
                            <input asp-for="Lcid" class="form-control" />
                            <span asp-validation-for="Lcid" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Alias" class="control-label"></label>
                        <div>
                            <input asp-for="Alias" class="form-control" />
                            <span asp-validation-for="Alias" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <div>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <div>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Icon" class="control-label"></label>
                        <div>
                            <select class="form-control colmd-2 selectpicker" asp-for="Icon">
                                <option value="flag-icon-us" data-content="<h4><i class='flag-icon h4 flag-icon-us'></i> en-us</h4>">en-us</option>
                                <option value="flag-icon-gb" data-content="<h4><i class='flag-icon h4 flag-icon-gb'></i> en-uk</h4>">en-uk</option>
                                <option value="flag-icon-vn" data-content="<h4><i class='flag-icon h4 flag-icon-vn'></i> vi-vn</h4>">vi-vn</option>
                                <option value="flag-icon-cn" data-content="<h4><i class='flag-icon h4 flag-icon-cn'></i> zh-TW</h4>">zh-TW</option>
                            </select>

                            @*<div class="form-check">
                                    <label class="form-check-label">
                                        <input asp-for="Icon" class="form-check-input" type="radio" value="flag-icon-us" checked>
                                        <i class="flag-icon flag-icon-us"></i> Usa
                                    </label>
                                    <label class="form-check-label">
                                        <input asp-for="Icon" class="form-check-input" type="radio" value="flag-icon-vn" checked>
                                        <i class="flag-icon flag-icon-vn"></i> Vietnam
                                    </label>
                                </div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
