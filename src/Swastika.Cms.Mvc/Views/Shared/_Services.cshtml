@model Swastika.IO.Cms.Lib.ViewModels.ModuleViewModel

@if (Model != null && Model.Data.TotalItems > 0)
{
    <section id="services" class="service-item">
        <div class="container">
            <div class="center wow fadeInDown">
                <h2>@Model.Title</h2>
                <p class="lead">@Model.Description</p>
            </div>
            <div class="row">
                 @foreach (var item in Model.Data.Items)
                 {
                <a href="@item.GetStringValue("Url")">
                    <div class="col-sm-6 col-md-4">
                        <div class="media services-wrap wow fadeInDown">
                            <div class="pull-left">
                                <img class="img-responsive" src="@item.GetStringValue("Image")">
                            </div>
                            <div class="media-body">
                                <h3 class="media-heading">@item.GetStringValue("Title")</h3>
                                <p>@item.GetStringValue("Description")</p>
                            </div>
                        </div>
                    </div>
                </a>
                 }
            </div>
        </div>
        <!--/.container-->
    </section>
    <!--/#services-->
}










